{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",

    "types": ["node"],
    "lib": ["ES2022"],

    "sourceMap": true,
    "declaration": false,

    "strict": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "isolatedModules": true,
    "skipLibCheck": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
